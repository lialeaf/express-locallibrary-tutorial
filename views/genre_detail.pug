extends layout

block content

  h1 图书类别: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 图书介绍
    
    dl
    each book in genre_books
      dt 
        a(href=book.url) #{book.title}
        dd #{book.summary}

    else
      p This genre has no books
  hr
  p
    a(href=genre.url+'/delete')    Delete a genre
  p
    a(href=genre.url+'/update')  Update a genre