extends layout

block content
  h1=title
  p book_id: #{bookinstance._id}

  form(method='POST' action='')
    div.form-group
      label(for='book') Book:
      select#book.form-control(type='select' placeholder='Select book' name='book' required='true')
        for book in book_list
          if bookinstance
            option(value=book._id selected=(book._id.toString()==bookinstance.book._id || book._id.toString()==bookinstance.book ? 'selected' : false)) #{book.title}
          else
            option(value=book._id) #{book.title}
        
    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text' placeholder='Publisher and date information' name='imprint' required='true' value=(undefined===bookinstance ? '' : bookinstance.imprint))
    div.form-group
      label(for='due_back') Date when book available:
      input#due_back.form-control(type='date' name='due_back' value=(undefined===bookinstance ? '' : bookinstance.due_back_formatted))
            
    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
        option(value='馆藏维护' selected=(bookinstance.status=='馆藏维护'?'selected':false)) 馆藏维护
        option(value='可供借阅' selected=(bookinstance.status=='可供借阅'?'selected':false)) 可供借阅
        option(value='已借出' selected=(bookinstance.status=='已借出'?'selected':false)) 已借出
        option(value='保留' selected=(bookinstance.status=='保留'?'selected':false)) 保留

    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg